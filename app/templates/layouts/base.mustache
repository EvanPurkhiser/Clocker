<!DOCTYPE HTML>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/css/bootstrap-combined.no-icons.min.css" rel="stylesheet">
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css" rel="stylesheet">
    <link rel="stylesheet" href="{{css_asset_path}}" />
  </head>
  <body>
    <header>
      <div class="container">
        <h1 class="pull-left">
          <a href="/"><i class="icon-time"></i> Clocker</a>
        </h1>

        {{#user}}
        <ul class="user-options pull-right nav nav-pills">
          <li class="user">
            <a href="/profile">
              <span class="name hidden-phone">{{name}}</span>
              <img class="avatar" src="//gravatar.com/avatar/{{gravatar_id}}?s=24&amp;d=identicon">
            </a>
          </li>
          <li>
            <a href="/account/settings" data-toggle="tooltip" data-placement="bottom" title="Account Settings"><i class="icon-cog"></i></a>
          </li>
          <li>
            <a href="/account/logout" data-toggle="tooltip" data-placement="bottom" title="Logout"><i class="icon-signout"></i></a>
          </li>
        </ul>
        {{/user}}
        {{^user}}
        <div class="login">

        <div class="login">
          <form method="post" action="/account/login" class="form-inline pull-right hidden-phone">
            <input class="input-medium" type="email" name="email" placeholder="Email" />
            <input class="input-medium" type="password" name="password" placeholder="Password" />
            <button class="btn btn-inverse" type="submit"><i class="icon-signin"></i></button>
          </form>
          <a href="/account/login" class="btn btn-primary pull-right visible-phone">Login</a>
        </div>
        {{/user}}
      </div>
    </header>

    <section class="container" id="alerts">
      {{#alerts}}
      <div class="alert alert-{{type}}">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <i class="icon-info-sign"></i> {{message}}
      </div>
      {{/alerts}}
    </section>

    {{yield}}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.3.1/js/bootstrap.min.js"></script>
    <script src="{{js_asset_path}}"></script>
  </body>
</html>
